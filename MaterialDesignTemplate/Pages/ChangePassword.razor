
<MatTooltip Tooltip="Wachtwoord wijzigen" Wrap="true">
    <MatIconButton Icon="person" OnClick="@OpenDialog"></MatIconButton>
</MatTooltip>


<MatDialog @bind-IsOpen="@dialogIsOpen">
    <MatDialogTitle>Paswoord wijzigen</MatDialogTitle>
    <MatDivider></MatDivider>
    <MatDialogContent>
        @*<MatTextField Label="Oude paswoord" @bind-Value="@name" Outlined="true"></MatTextField>
        <MatTextField Label="Nieuwe paswoord" @bind-Value="@animal" Outlined="true"></MatTextField>
        <MatTextField Label="Herhaal nieuwe paswoord" @bind-Value="@dialogAnimal" Outlined="true"></MatTextField>*@

        <MatTextField Label="Oude paswoord" @bind-Value="@currentPassword"></MatTextField>
        <MatTextField Label="Nieuwe paswoord" @bind-Value="@newPassword"></MatTextField>
        <MatTextField Label="Herhaal nieuwe paswoord" @bind-Value="@newPasswordConfirm"></MatTextField>

    </MatDialogContent>
    <MatDialogActions>
        <MatButton OnClick="@(e => { dialogIsOpen = false; })">Sluiten</MatButton>
        <MatButton OnClick="@OkClick" Raised="true">Wijzigen</MatButton>
    </MatDialogActions>
</MatDialog>

@code
        {
    private bool dialogIsOpen = false;
    private string currentPassword = null;
    private string newPassword = null;
    private string newPasswordConfirm = null;

    void OpenDialog()
    {
        dialogIsOpen = true;
    }

    void OkClick()
    {     
        dialogIsOpen = false;
    }

}
